# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Node {
  id:       Int!
  url:      String!
  alias:    String!
  pubkey:   String!
  macaroon: String!
}

type Channel {
  id:           Int!
  funding_txid: String!
  output_index: Int!
  node_id:      Int!
}

type MultiChannelBackup {
  id:         Int!
  created_at: String!
  backup:     String!
  node_id:    Int!
}

input NewNode {
  id: Int!
  url: String!
  alias: String!
  pubkey: String!
  macaroon: String!
}

type User {
  id: ID!
  name: String!
}

type Query {
  nodes: [Node!]!
  channels: [Channel!]!
  multi_channel_backups: [MultiChannelBackup!]!
}


type Mutation {
  createNode(input: NewNode!): Node!
}
